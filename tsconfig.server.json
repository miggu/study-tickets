{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.server.tsbuildinfo",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023", "DOM"],
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "rootDir": "server",
    "outDir": "dist/server"
  },
  "include": ["server/**/*.ts"]
}
